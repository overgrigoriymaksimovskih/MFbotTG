<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!--<RollingFile name="DebugLog" fileName="mail-service/logs/debug/debug.log"-->
        <RollingFile name="DebugLog" fileName="/var/lib/mail-service/debug/debug.log"
                     filePattern="/var/lib/mail-service/debug/debug-%d{yyyy-MM-dd}-%i.log.gz">
            <!--filePattern="mail-service/logs/debug-%d{yyyy-MM-dd}-%i.log.gz">-->
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10MB" />
                <TimeBasedTriggeringPolicy />
            </Policies>
            <DefaultRolloverStrategy max="3"/>
        </RollingFile>

        <!--<RollingFile name="InfoLog" fileName="mail-service/logs/info/info.log"-->
        <RollingFile name="InfoLog" fileName="/var/lib/mail-service/info/info.log"
                     filePattern="/var/lib/mail-service/info/info-%d{yyyy-MM-dd}-%i.log.gz">
            <!--filePattern="mail-service/logs/info-%d{yyyy-MM-dd}-%i.log.gz">-->
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            <ThresholdFilter level="WARN" onMatch="DENY" onMismatch="NEUTRAL"/> <!-- Исключаем WARN и выше -->
            <Policies>
                <SizeBasedTriggeringPolicy size="10MB" />
                <TimeBasedTriggeringPolicy />
            </Policies>
            <DefaultRolloverStrategy max="2"/>
        </RollingFile>

        <!--<RollingFile name="WarnErrorLog" fileName="mail-service/logs/warn/warn.log"-->
        <RollingFile name="WarnErrorLog" fileName="/var/lib/mail-service/warn/warn.log"
                     filePattern="/var/lib/mail-service/warn/warn_error-%d{yyyy-MM-dd}-%i.log.gz">
            <!--filePattern="mail-service/logs/warn_error-%d{yyyy-MM-dd}-%i.log.gz">-->
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10MB" />
                <TimeBasedTriggeringPolicy />
            </Policies>
            <DefaultRolloverStrategy max="2"/>
        </RollingFile>

        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="DEBUG">
            <AppenderRef ref="DebugLog"/>
            <AppenderRef ref="InfoLog"/>
            <AppenderRef ref="WarnErrorLog"/>
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
